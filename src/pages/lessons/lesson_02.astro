---
import MainLayout from "@/layouts/MainLayout.astro"
import Footer from "@/components/Footer.astro"
import LssnArt from "@/components/LssnArt.astro"
import ChaptrSect from "@/components/ChaptrSect.astro"
import ChaptrSubSect from "@/components/ChaptrSubSect.astro"
---
<MainLayout>
  <LssnArt artClass="lssn__02" h2Title="Interacción con el usuario" slot="mainContent">
    <ChaptrSect h3Title="Mostrar información al usuario">
      <ChaptrSubSect h4Title="La función" codeText="alert()">
        <p class="chaptrSubSect__p">Muestra una ventana <mark>modal</mark> con un mensaje tipo <mark><b>String</b></mark>, y espera que el usuario presione <span class="bttn">Aceptar</span></p>
        <pre class="chaptrSubSect__console wScript">
          alert('/º ¿Deseas salir? º/');</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="La función" codeText="prompt()">
        <p class="chaptrSubSect__p">Muestra una ventana <mark>modal</mark> con un mensaje de texto, un campo de entrada de datos para el usuario y los botones <span class="bttn">Ok</span> y <span class="bttn">Cancelar</span></p>
        <pre class="chaptrSubSect__console wScript">
          let ·age = prompt('/º ¿Cuántos años tienes? º/', ¬25);
          alert(`/º Tienes $&#123;·age&#125; años! º/`);</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="La función" codeText="confirm()">
        <p class="chaptrSubSect__p">Muestra una ventana <mark>modal</mark> con un mensaje de texto, y los botones <span class="bttn">Ok</span> y <span class="bttn">Cancelar</span>. El resultado es <code>true</code> si se pulsa <span class="bttn">Ok</span>, y <code>false</code> si se pulsa <span class="bttn">Cancelar</span></p>
        <pre class="chaptrSubSect__console wScript">
          let ·eresElJefe = confirm('/º ¿Eres el jefe? º/');
          ⋗ /º true º/         /*/º si pulsas Ok º/*/</pre>
      </ChaptrSubSect>
    </ChaptrSect>
  </LssnArt>
	<Footer slot="mainFooter" prevPage="/lessons/lesson_01" nextPage="/lessons/lesson_03"/>
</MainLayout>


