---
import MainLayout from "@/layouts/MainLayout.astro"
import Footer from "@/components/Footer.astro"
import LssnArt from "@/components/LssnArt.astro"
import ChaptrSect from "@/components/ChaptrSect.astro"
import ChaptrSubSect from "@/components/ChaptrSubSect.astro"
---
<MainLayout>
  <LssnArt artClass="lssn__06" h2Title="Comparaciones" slot="mainContent">
    <ChaptrSect h3Title="Buscar igualdad" codeText="">
      <ChaptrSubSect h4Title="Igualdad débil" codeText="==">
        <p class="chaptrSubSect__p">Compara los valores de las variables, pero <mark>no sus tipos</mark>. Intentará convertir uno o ambos valores a un tipo común antes de hacer la comparación</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬2;
          let ·second = '2';

          console.log(·first == ·second);
          ⋗ /º true º/     /*/º Convierte a Num el String '2' º/*/</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="Igualdad estricta" codeText="===">
        <p class="chaptrSubSect__p">Compara tanto el valor como el tipo. No intenta convertir los tipos</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬2;
          let ·second = '2';

          console.log(·first === ·second);
          ⋗ /º false º/     /* Num vs String */</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="Comparación de valores" codeText="Object.is()" hint="#másConfiableQue===">
        <p class="chaptrSubSect__p">Más confiable que <code>===</code> y funciona con <code>NaN</code>, <code>0</code> y <code>-0</code></p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬2;
          let ·second = '2';

          console.log(Object.ªis(·first, ·second));
          ⋗ /º false º/     /* Num vs String */</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="Mayor o igual que" codeText=">=">
        <p class="chaptrSubSect__p">Devuelve <code>true</code> si el operando de la izquierda es mayor o igual al operando de la derecha</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬20;
          let ·second = ¬10;

          console.log(·first ≧ ·second);
          ⋗ /º true º/</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="Menor o igual que" codeText="<=">
        <p class="chaptrSubSect__p">Devuelve <code>true</code> si el operando de la izquierda es menor o igual al operando de la derecha</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬20;
          let ·second = ¬10;

          console.log(·first ≦ ·second);
          ⋗ /º false º/</pre>
      </ChaptrSubSect>
    </ChaptrSect>
    <ChaptrSect h3Title="Buscar desigualdad" codeText="">
      <ChaptrSubSect h4Title="Desigualdad débil" codeText="!=">
        <p class="chaptrSubSect__p">Compara los valores de las variables, pero <mark>no sus tipos</mark>. Intentará convertir uno o ambos valores a un tipo común antes de hacer la comparación</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬2;
          let ·second = '2';

          console.log(·first ≠ ·second);
          ⋗ /º false º/</pre>
      </ChaptrSubSect>
      <ChaptrSubSect h4Title="Desigualdad estricta" codeText="!==">
        <p class="chaptrSubSect__p">Compara tanto el valor como el tipo. No intenta convertir los tipos</p>
        <pre class="chaptrSubSect__console wScript">
          let ·first = ¬2;
          let ·second = '2';

          console.log(·first ≢ ·second);
          ⋗ /º true º/</pre>
      </ChaptrSubSect>
    </ChaptrSect>
  </LssnArt>
	<Footer slot="mainFooter" prevPage="/lessons/lesson_05" nextPage="/lessons/lesson_07"/>
</MainLayout>



